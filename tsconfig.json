{
  "compilerOptions": {
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@*": ["./src/*"]
    },
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
